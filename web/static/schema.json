{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["tasks"],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "commands"],
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the task"
          },
          "description": {
            "type": "string",
            "description": "A description of what the task does"
          },
          "env": {
            "type": "array",
            "description": "Environment variables to set for the commands",
            "items": {
              "type": "object",
              "required": ["key", "value"],
              "properties": {
                "key": {
                  "type": "string",
                  "description": "The name of the environment variable"
                },
                "value": {
                  "type": "string",
                  "description": "The value of the environment variable"
                }
              }
            }
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["platforms", "run"],
              "properties": {
                "platforms": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "enum": ["linux", "mac", "windows"],
                    "description": "The platform on which to run the commands"
                  },
                  "minItems": 1
                },
                "run": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "The command to run"
                  },
                  "minItems": 1
                },
                "parallel": {
                  "type": "boolean",
                  "description": "Whether to run the commands in parallel",
                  "default": false
                },
                "env": {
                  "type": "array",
                  "description": "Environment variables to set for the commands",
                  "items": {
                    "type": "object",
                    "required": ["key", "value"],
                    "properties": {
                      "key": {
                        "type": "string",
                        "description": "The name of the environment variable"
                      },
                      "value": {
                        "type": "string",
                        "description": "The value of the environment variable"
                      }
                    }
                  }
                },
                "arch": {
                  "type": "array",
                  "items": {
                    "type": "string",
                    "description": "The architecture on which to run the commands, defaults to all",
                    "enum": ["x64", "arm64", "x86", "all"],
                    "default": "all"
                  }
                }
              }
            },
            "minItems": 1
          }
        }
      },
      "minItems": 1
    }
  }
}
